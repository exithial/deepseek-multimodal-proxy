# ========================================
# SERVIDOR
# ========================================
PORT=7777
LOG_LEVEL=info

# ========================================
# GEMINI (Visión)
# ========================================
GEMINI_API_KEY=tu_api_key_de_google
GEMINI_MODEL=gemini-2.5-flash
# Prompt base adaptable (será enriquecido con contexto del usuario si existe)
VISION_PROMPT=Describe esta imagen en detalle para un asistente de IA que no puede verla. Incluye todos los elementos visuales importantes, texto visible, colores, composición y contexto relevante.

# ========================================
# DEEPSEEK
# ========================================
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_TIMEOUT_MS=30000

# ========================================
# CACHÉ
# ========================================
CACHE_ENABLED=true
CACHE_DIR=./cache
CACHE_TTL_DAYS=7
CACHE_MAX_ENTRIES=1000

# ========================================
# LÍMITES
# ========================================
MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_REQUEST=999
