# ========================================
# SERVIDOR (DeepSeek Multimodal Proxy)
# ========================================
PORT=7777
LOG_LEVEL=info

# ========================================
# GEMINI (Multimodal)
# ========================================
GEMINI_API_KEY=tu_api_key_de_google
# Modelo Gemini para análisis multimodal (más económico)
GEMINI_MODEL=gemini-2.5-flash-lite
# Prompt base adaptable para contenido multimodal
MULTIMODAL_PROMPT=Analyze this content thoroughly and describe what you see/hear/read in detail. Include all relevant information. Be precise and comprehensive.

# ========================================
# DEEPSEEK
# ========================================
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_TIMEOUT_MS=30000

# Límites de tokens (Basado en DeepSeek v3.2/2026)
DEEPSEEK_CONTEXT_WINDOW_CHAT=100000
DEEPSEEK_CONTEXT_WINDOW_REASONER=100000
DEEPSEEK_MAX_OUTPUT_CHAT=8000
DEEPSEEK_MAX_OUTPUT_REASONER=64000

# ========================================
# CACHÉ
# ========================================
CACHE_ENABLED=true
CACHE_DIR=./cache
CACHE_TTL_DAYS=7
CACHE_MAX_ENTRIES=1000


# ========================================
# LÍMITES
# ========================================
# Límite general para todos los archivos (imágenes, PDFs, audio, video, etc.)
# 50MB es el límite oficial de Gemini API (usado por el Proxy Multimodal)
MAX_FILE_SIZE_MB=50
MAX_IMAGES_PER_REQUEST=999

# ========================================
# PROCESAMIENTO PDF (OPCIONAL)
# ========================================
# Routing inteligente basado en tamaño para PDFs
# Por defecto: PDFs pequeños (< 1MB) van local, grandes a Gemini
PDF_LOCAL_PROCESSING=true          # true: PDFs pequeños van local, false: todo a Gemini
PDF_LOCAL_MAX_SIZE_MB=1            # Tamaño máximo para procesamiento local (1MB por defecto)
